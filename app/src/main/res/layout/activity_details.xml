<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eae.kipper.jung.gabriel.mitgliederverwaltung.Details">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <!-- <android.support.design.widget.TextInputLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/Input_Text_Label_Plz">

         <EditText
             android:id="@+id/Input_Text_Plz"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:inputType="number"
             android:hint="@string/hint_plz"
             android:ems="10" />-->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="true">


            <TextView
                android:id="@+id/Label_Text_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:gravity="right|center_vertical"
                android:text="@string/label_name" />

            <EditText
                android:id="@+id/Text_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="0"
                android:background="@drawable/textview_border"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/Label_Text_Vorname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:gravity="right|center_vertical"
                android:text="@string/label_vorname" />

            <EditText
                android:id="@+id/Text_Vorname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="1"
                android:background="@drawable/textview_border"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/Label_Text_Nummer_Privat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:gravity="right|center_vertical"
                android:text="@string/label_nummer_privat" />

            <EditText
                android:id="@+id/Text_Nummer_Privat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="2"
                android:background="@drawable/textview_border"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/Label_Text_Nummer_Mobil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:gravity="right|center_vertical"
                android:text="@string/label_nummer_mobil" />

            <EditText
                android:id="@+id/Text_Nummer_Mobil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="3"
                android:background="@drawable/textview_border"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/Label_Text_Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:gravity="right|center_vertical"
                android:text="@string/label_email" />

            <EditText
                android:id="@+id/Text_Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="4"
                android:background="@drawable/textview_border"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/Label_Text_Strasse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="5"
                android:gravity="right|center_vertical"
                android:text="@string/label_strasse" />

            <EditText
                android:id="@+id/Text_Strasse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="5"
                android:background="@drawable/textview_border"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/Label_Text_Plz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="6"
                android:gravity="right|center_vertical"
                android:text="@string/label_plz" />

            <EditText
                android:id="@+id/Text_Plz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="6"
                android:background="@drawable/textview_border"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/Label_Text_Ort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="7"
                android:gravity="right|center_vertical"
                android:text="@string/label_ort" />

            <EditText
                android:id="@+id/Text_Ort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="7"
                android:background="@drawable/textview_border"
                android:textSize="16dp" />


        </GridLayout>


    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/foating_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"

        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"

        android:src="@drawable/ic_save"
        app:backgroundTint="#FF5722"
        app:borderWidth="0dp"
        app:elevation="5dp"
        app:fabSize="normal"
        app:rippleColor="#bf360c" />
</FrameLayout>
